<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center">

	<Button
		android:id="@+id/map_btn"
		android:text="Map"
		android:layout_width="150dp"
		android:layout_height="wrap_content" />

	<Button
		android:id="@+id/push_btn"
		android:text="Push"
		android:layout_width="150dp"
		android:layout_height="wrap_content" />

	<Button
		android:id="@+id/classic_scan_btn"
		android:text="Classic scan"
		android:layout_width="150dp"
		android:layout_height="wrap_content" />

	<Button
		android:id="@+id/custom_scan_btn"
		android:text="Custom scan"
		android:layout_width="150dp"
		android:layout_height="wrap_content" />

	<Button
		android:id="@+id/site_btn"
		android:text="Site Kit"
		android:layout_width="150dp"
		android:layout_height="wrap_content" />

	<Button
		android:id="@+id/safetydetect_btn"
		android:text="Safety Detect"
		android:layout_width="150dp"
		android:layout_height="wrap_content" />

</LinearLayout>
